{
  "version": 2,
  "builds": [
    {
      "src": "nextjs-folder",
      "use": "@vercel/node"
    }
  ],
  "routes": [{ "handle": "filesystem" }, { "src": "/.*", "dest": "/" }],
  "functions": { "api/*.js": { "runtime": "nodejs14.x" } },
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.example.com"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "https://api.example.com"
    },
    "scripts": {
      "build": "prisma generate && next build",
      "install": "npm install"
    }
  }
}
